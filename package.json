    "@walletconnect/core": "^2.23.0",
    "@walletconnect/utils": "^2.23.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.24",
    "next": "16.0.1",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "tailwind-merge": "^3.4.0",
    "viem": "^2.38.6",
    "wagmi": "^2.19.2"
